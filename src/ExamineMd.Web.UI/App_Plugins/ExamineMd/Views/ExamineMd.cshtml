@inherits Umbraco.Web.Mvc.UmbracoViewPage<MarkdownVirtualContent>
@using ClientDependency.Core.Mvc
@using ExamineMd
@using ExamineMd.Search
@using ExamineMd.Models
@using Umbraco.Core
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Your site description." />
    <title>@Model.PageTitle</title>

    @{ Html
           .RequiresJs("//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
           .RequiresCss("//fonts.googleapis.com/css?subset=latin,cyrillic-ext,latin-ext,cyrillic&family=Oxygen:300|Open+Sans:400,600,400italic,600italic|Merriweather:400,300,300italic,400italic,700,700italic|Roboto+Slab:400,300")
           .RequiresPackageCss("styles.min.css")
           .RequiresPackageJs("responsive.min.js");
    }
    @Html.RenderCssHere()
</head>
<body>
    <div id="container">
        <header role="banner" class="container">
            <div class="clearfix row">
                <h1>Examine MD</h1>
                @Model.Url
            </div>
        </header>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                @if (Model.Markdown != null)
                {
                    @Model.Markdown.BodyHtml()        
                }

                
            </div>
            <div class="col-xs-4">
                <h3>Directories</h3>
                @{
                    var query = new MarkdownQuery();

                    var files = query.GetAll().ToArray();
                    
                    <ul>
                        @foreach (var f in files)
                        {
                            var md = new MarkdownVirtualContent(Model.Parent, f);
                            <li><a href="/documentation@(md.Url)">@f.Title</a></li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
    @Html.RenderJsHere()
</body>







</html>